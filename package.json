{
    "name": "toy-robot-sim",
    "version": "0.1.1",
    "description": "Toy Robot Simulator: Node.js/TypeScript CLI app",
    "author": "Damon Cai @Oneiriac",
    "bin": {
        "robotsim": "./bin/run"
    },
    "homepage": "https://github.com/Oneiriac/toy-robot-sim",
    "license": "MIT",
    "main": "dist/index.js",
    "repository": "Oneiriac/toy-robot-sim",
    "files": [
        "/bin",
        "/dist",
        "/npm-shrinkwrap.json",
        "/oclif.manifest.json"
    ],
    "dependencies": {
        "@oclif/core": "^1",
        "@oclif/plugin-help": "^5"
    },
    "devDependencies": {
        "@oclif/test": "^2",
        "@types/chai": "^4",
        "@types/mocha": "^9.0.0",
        "@types/node": "12",
        "@typescript-eslint/eslint-plugin": "^5.13.0",
        "@typescript-eslint/parser": "^5.0.0",
        "chai": "^4",
        "eslint": "^8.16.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-airbnb-typescript": "^17.0.0",
        "eslint-config-prettier": "8.5.0",
        "eslint-plugin-import": "^2.25.2",
        "globby": "^11",
        "mocha": "^9",
        "oclif": "^2",
        "prettier": "2.6.2",
        "shx": "^0.3.3",
        "sinon": "^13.0.2",
        "ts-node": "^10.2.1",
        "tslib": "^2.3.1",
        "typescript": "^4.4.3"
    },
    "oclif": {
        "bin": "robotsim",
        "dirname": "robotsim",
        "commands": "./dist/commands",
        "plugins": [
            "@oclif/plugin-help"
        ]
    },
    "scripts": {
        "build": "shx rm -rf dist && tsc -p tsconfig-build.json",
        "lint": "eslint . --ext .ts --config .eslintrc",
        "postpack": "shx rm -f oclif.manifest.json",
        "posttest": "yarn lint",
        "prepack": "yarn build && oclif manifest && oclif readme",
        "test": "mocha --forbid-only \"test/**/*.test.ts\"",
        "version": "oclif readme && git add README.md"
    },
    "engines": {
        "node": ">=12.0.0"
    },
    "bugs": "https://github.com/Oneiriac/toy-robot-sim/issues",
    "keywords": [
        "oclif"
    ],
    "types": "dist/index.d.ts"
}
